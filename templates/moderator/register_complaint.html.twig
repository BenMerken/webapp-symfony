{% extends'base.html.twig' %}

{% block title %}Register complaint{% endblock %}

{% block content %}
    <h1 class="font-weight-light">Register complaint</h1>
    {{ form_start(register_form) }}
    <div class="form-group">
        {{ form_label(register_form.user, 'Complaint against user:') }}
        {{ form_widget(register_form.user) }}
    </div>
    <div class="form-group">
        {{ form_label(register_form.reason, 'Please enter a reason for your complaint:') }}
        {{ form_widget(register_form.reason) }}
    </div>

    <button class="btn btn-outline-success">Register complaint</button>
    {{ form_end(register_form) }}<br>
    <a href="{{ url('moderator_dashboard') }}" class="btn btn-outline-primary">Back to dashboard</a>
{% endblock %}
